<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 记得加上命名空间 -->
<mapper namespace="com.example.zout.vip.dao.VIPDao">
<!-- 插入操作 -->
<insert id="insert">
	insert into vip_detail(id,code,name,age,sex,qq,
	email,address,zip,remark,rank,amount)
	values(#{id},#{code},#{name},#{age},#{male},#{qq},#{email},#{address},#{zip},#{remark},#{rank},#{amount})	
</insert>
	<!-- 更新>>set>>可以修改的项 -->
	<update id="update">
		update vip_detail set
		code=#{code},
		name=#{name},
		age=#{age},
		sex=#{male},
		qq=#{qq},
		email=#{email},
		address=#{address},
		zip=#{zip},
		remark=#{remark},
		rank=#{rank},
		amount=#{amount}
		where id=#{id}
	</update>
	
	<!-- 查询 -->
	<select id="exsits" resultType="java.lang.Boolean">
	select count(1)>0 from vip_detail 
	where ${key} = #{value}
	</select>
	<!-- map查询 -->
	<select id="select" resultMap="VIPMap">
        select * from vip_detail where ${key}=#{value}
    </select>
    <!-- 模糊查询 -->
    <select id="selectLike" resultMap="VIPMap">
    	select * from vip_detail 
    	<if test="key!=null">
    		where code like #{key}
    		or name like #{key}
    		or qq like #{key}
    		or email like #{key}
    		or address like #{key}
    		or remark like #{key}
    	</if>
    	order by code
    </select>
    
    <resultMap type="com.example.zout.vip.entity.VIPEntity" id="VIPMap" >
    	<result column="sex" property="male"/>
    </resultMap>	
</mapper>